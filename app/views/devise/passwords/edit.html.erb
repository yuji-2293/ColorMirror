<div class="flex items-center justify-center py-6 glass ">
  <div class="max-w-3xl w-full rounded-lg focus:shadow-lg focus:outline-none p-8" id="focus-target" tabindex="-1">
    <h1 class="text-2xl font-bold text-center"></h1>
      <%= form_with model: resource, as: resource_name, url: password_path(resource_name), html: { method: :put } do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
        <div class="field">
            <%= f.label :password, "新しいパスワード", class:" text-sm text-pink-400 font-bold" %>
            <div class="field grow input flex items-center gap-2 border-spacing-3 border-gray-300 rounded-lg hover:shadow-lg px-4 py-2 focus-within:ring-2 focus-within:ring-pink-400 bg-white text-lg">
            <i class="fa-solid fa-lock mr-2"></i>
              <% if @minimum_password_length %>
                <%= f.password_field :password, autocomplete: "new-password", placeholder: "(#{@minimum_password_length}文字以上)", class:"bg-white border-none outline-none flex-grow text-gray-700 text-md" %>
              <% end %>
            </div>
        </div>

        <div class="actions">
          <%= f.submit "パスワードを再設定",class: "btn btn-primary border w-full my-3 mx-auto rounded-lg hover:shadow-lg" %>
        </div>
        <div class="links">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
  </div>
</div>
