<div class="flex items-center justify-center p-6 m-6  bg-base-300 min-h-screen">
  <div class="max-w-md w-full rounded-md shadow-md bg-white p-8">
    <h1 class="text-2xl font-bold text-center">ログイン</h1>

<%= form_with model: @user, url: user_session_path, local: true, class: "space-y-4" do |f| %>
    <label class="input input-bordered flex items-center gap-2">
          <div class="field grow">
            <%= f.label :name,t(".name") %><br/>
            <%= f.text_field :name, autofocus: true, autocomplete: "name",placeholder: "名前", class:"text-base-300 text-lg" %>
          </div>
    </label>
    <label class="input flex items-center gap-2">
            <div class="field grow">
            <%= f.label :password,t(".password")  %><br/>
            <%= f.password_field :password, autocomplete: "current-password",placeholder: "パスワード", class:"text-base-300 text-lg" %>
          </div>
    </label>
          <div class="flex flex-col justify-start md:flex-row md:justify-between md:items-center">
        <% if devise_mapping.rememberable? %>
          <div class="field flex items-center gap-2 mb-6 md:mb-0">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "text-xs text-nowrap" %>
          </div>
        <% end %>
      </div>
      <div class="actions">
        <%= f.submit "ログイン",class: "btn btn-primary border w-full my-3 mx-auto hover:bg-white" %>
      </div>
        <% end %>
        <div>
          <%= render "devise/shared/links" %>
        </div>
  </div>
</div>
