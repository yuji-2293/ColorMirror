<div class="links flex items-center justify-center space-y-0 space-x-4">
  <%- if controller_name != 'sessions' && controller_name !="confirmations" %>
    <%= link_to t(".Log in"), new_session_path(resource_name),class:"block bg-gray-400 opacity-50 p-2 text-center sm:text-sm text-xs rounded-lg font-bold text-white" %><br />
  <% end %>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to t(".signup"), new_registration_path(resource_name),class: "block p-2 bg-gray-400 opacity-50 text-center sm:text-sm text-xs font-bold text-white rounded-lg " %><br />
  <% end %>
  <%- if devise_mapping.confirmable? && controller_name != "passwords" %>
    <%= link_to t(".confirmations"), confirm_confirmation_path, data: { turbo_stream: true } ,class:"block p-2 bg-gray-400 opacity-50 text-center sm:text-sm text-xs rounded-lg  font-bold text-white" %><br />
  <% end %>
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'  && controller_name !="confirmations" %>
    <%= link_to t(".forgot_pass"), reset_password_path, data: { turbo_stream: true }, class: "block p-2 bg-gray-400 opacity-50 text-center sm:text-sm text-xs rounded-lg  font-bold text-white" %>
  <% end %>
</div>


<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>
