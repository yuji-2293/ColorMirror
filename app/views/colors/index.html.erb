
<div class="flex flex-col items-center justify-center sm:px-4 sm:py-8 px-2 py-4 sm:space-y-10 space-y-5">

  <div class="text-center">
      <h2 class="text-3xl font-bold">今週の記録一覧</h2>
      <p class="text-sm text-gray-500"><%= @start_date.strftime("%-m/%-d") %> 〜 <%= @end_date.strftime("%-m/%-d") %></p>
  </div>
  <div class="max-w-7xl w-full mx-auto bg-slate-200 shadow-lg rounded-2xl p-8">
    <section class="glass overflow-hidden w-full">
      
      <% if @week_colors.present? %>
        <div class=" px-4 sm:px-8 md:px-12 mx-auto py-12 lg:py-24">

          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
            <% @week_colors.first(4).each do |color| %>
              <%= render partial: "colors/card", locals: { color: color } %>
            <% end %>
          </div>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
            <% @week_colors.drop(4).each do |color| %>
              <%= render partial: "colors/card", locals: { color: color } %>
            <% end %>
          </div>

      <% else %>
        <p class="text-center text-gray-500">今週の記録はありません</p>
      <% end %>
    </section>
  </div>
</div>
<div id="response-modal"></div>
